      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "eslintIgnore": [
    "build/*"
  ],
  "picocheck": {
    "require": "./tests/test.init.js"
  },
  "devDependencies": {
    "eslint": "^5.4.0",
    "eslint-plugin-react": "^7.11.1",
    "pico-check": "^1.0.6"
