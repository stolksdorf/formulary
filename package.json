  "repository": {
    "type": "git",
    "url": "git+https://github.com/stolksdorf/formulary.git"
  },
  "author": "stolksdorf",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stolksdorf/formulary/issues"
  },
  "homepage": "https://github.com/stolksdorf/formulary#readme",
  "dependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "classnames": "^2.2.6",
    "create-react-class": "^15.6.3",
    "express": "^4.16.3",
    "lodash": "^4.17.10",
    "md5": "^2.2.1",
    "pico-conf": "^1.4.1",
    "pico-flux": "^3.1.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "short-hash": "^1.0.0",
    "superagent": "^3.8.3",
    "vitreum": "^5.1.0",
    "xml2js": "^0.4.19"
  },
  "vitreum": {
    "targets": [
      "client/main/main.jsx"
    ]
  },
  "babel": {
